{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}
	<div class="container">
        
		<div class="row">
			<div class="col-6">
			 <p>Nom et prenom : {{ app.user.nom ~' ' ~ app.user.prenom}}</p>
			 <hr>
			 <p>Votre adresse de livraison : {{ app.user.adresse ~ ' ' ~ app.user.ville}}</p>		
			</div>
			<div class="col-6">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Nom</th>
							<th scope="col">Prix</th>
							<th scope="col">quantit√©</th>
							<th scope="col">image</th>
							<th>total</th>
						</tr>
					</thead>
					<tbody>
						{% for item in panier %}
							<tr>
								<th scope="row">{{ item['produit'].getName() }}
								</th>
								<td>{{ item['produit'].getprix() }}</td>
								<td>{{ item['quantity'] }}</td>
								
								<td>
									{{ item['total'] }}</td>
								<td></td>
							</tr>
						{% endfor %}
						{{ total_panier }}
					</tbody>


				</table>
			</div>


		</div>


		<div>
			<a href="{{ path('achat')}}" class="btn btn-secondary">Passer Votre commande
			</a>
			<h3>le total de votre panier :
				{{ total_panier }}</h3>
		</div>
	</div>
{% endblock %}
