{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
<style>
.container3{
    background-color: grey;
 width: 600px;
 padding:50px;
 border-radius: 30px;
 box-shadow: 0 0 20px #000000;
margin-bottom: 100px;
}
</style>
    <h1>Adresse index</h1>

    <table class="table">
    <div class="container3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Tel</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.cp }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.pays }}</td>
                <td>{{ adresse.tel }}</td>
                <td>{{ adresse.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('adresse_show', {'id': adresse.id}) }}">show</a>
                    <a href="{{ path('adresse_edit', {'id': adresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </div>
    </table>

    <a href="{{ path('adresse_new') }}">Create new</a>
{% endblock %}
