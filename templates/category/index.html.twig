{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<style>
body{
    background-image: url(assets/images/logo-de-vecteur-pour-le-magasin-sport-panneau-décoratif-noir-signe-avec-l-illustration-des-chaussures-à-la-mode-sports-et-les-155053910.jpg);
}
   
</style>
    <h1>Category index</h1>

    <table class="table">
        <thead>
             <tr class="table-primary">
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
             <tr class="table-primary">
              
                <td class="table-dark">{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

         <div class="position-absolute top-2 start-50 translate-middle-x"><a class="btn btn-danger" role="button" mx-auto href="{{ path('app_category_new') }}">Create new</a></div>

{% endblock %}
